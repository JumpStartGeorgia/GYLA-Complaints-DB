<%= semantic_nested_form_for @pec_complaint, :html => { :multipart => true } do |f| %>


  <br />

  <%= f.inputs do %>

    <%= f.input :election_id, :as => :select, :collection => Election.order('date DESC'), :label => t('forms.election'), :include_blank => false %>


    <%= f.input :pec_observer, :label => t('forms.pec.observer') %>

    <%= f.input :pec_observer_address, :label => t('forms.pec.observer_address') %>

    <%= f.input :pec_observer_phone, :label => t('forms.pec.observer_phone') %>

    <%= f.input :pec_district_name, :label => t('forms.pec.district_name') %>

    <%= f.input :pec_precinct_number, :label => t('forms.pec.precinct_number') %>

    <%= f.input :pec_violation_period, :label => t('forms.pec.violation_period') %>

    <%= f.input :pec_violation_type, :label => t('forms.pec.violation_type') %>

    <%#= f.input :pec_violated_at, :as => :string, :label => t('forms.pec.violated_at'), :input_html => {:class => 'datetimepicker'} %>
    <%= f.input :pec_violated_at, :label => t('forms.pec.violated_at') %>

    <%= f.input :pec_violation_desc, :label => t('forms.pec.violation_desc') %>

    <%= f.input :pec_witness_info, :label => t('forms.pec.witness_info') %>

    <%= f.input :pec_violator_info, :label => t('forms.pec.violator_info') %>

    <%= f.input :pec_additional_info, :label => t('forms.pec.additional_info') %>

    <label class="label"><%= t('forms.pec.proofs') %></label>
    <%= f.fields_for :pec_complaint_files do |file_form| %>
      <% if !file_form.object.nil? && !file_form.object.file_file_name.nil? && file_form.object.field_type == 'proof' %>
        <%= link_to file_form.object.file_file_name, file_form.object.file.url, :target => "_blank" %>
      <% else %>
        <%= file_form.file_field :file %>
      <% end %>
      <%= file_form.hidden_field :field_type, :value => :proof %>
      <%= file_form.link_to_remove "Remove this attachment" %>
    <% end %>
    <p><%= f.link_to_add "Add an attachment", :pec_complaint_files, :data => {:field_type => :proof} %></p>
    <br />

